{
	"manifest_version": 3,
	"name": "Gamestop NFT helper",
	"description": "Add additional information to NFT pages",
	"version": "1.2.3",
	"icons": { "16": "icon16.png",
				"48": "icon48.png",
				"128": "icon128.png" },
	"action": {
		"default_popup": "menu.html"
	},
	"content_scripts": [
		{
			"matches": ["https://nft.gamestop.com/*"],
			"js": [
				"mdb.min.js",
				"sticky.min.js",
				"apexcharts.js",
				"storage.js",
				"math.js",
				"utility.js",
				"html_writer.js",
				"charts.js",
				"content-script.js"
			]
		}
	],
	"default_locale": "en",
	"permissions": [
		"storage",
		"tabs" 
	],
	"host_permissions": [
        "https://api.nft.gamestop.com/*"
    ],
	"web_accessible_resources": [{
		"resources": [ 
			"images/31ff16eef888637505a9c58ca047dd60.svg",
			"images/e33e04602d2c85d6edb3008d7823158e.svg"
		],
		"matches": [ "https://nft.gamestop.com/*" ]
	}]
}
