{
	"manifest_version": 3,
	"name": "Gamestop NFT helper",
	"description": "Add additional information to the NFT pages",
	"version": "1.2.2",
	"icons": { "16": "icon16.png",
				"48": "icon48.png",
				"128": "icon128.png" },
	"action": {
		"default_popup": "menu.html"
	},
	"content_scripts": [
		{
			"matches": ["https://nft.gamestop.com/*"],
			"js": [
				"mdb.min.js",
				"sticky.min.js",
				"apexcharts.js",
				"storage.js",
				"math.js",
				"utility.js",
				"html_writer.js",
				"charts.js",
				"content-script.js"
			]
		}
	],
	"default_locale": "en",
	"permissions": [
		"storage"
	],
	"host_permissions": [
        "https://api.nft.gamestop.com/*"
    ]
}
